{
  "manifest_version": 2,

  "name": "Yehpeiwen Detector",
  "description": "For NTHU NLP Course's Final Project",
  "version": "1.0",

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Click to detect"
  },

  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "96": "icon.png"
  }
}
